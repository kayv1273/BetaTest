<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsTabLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp">

    <!-- Customize Here for custom rules in the game-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Play:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkers is played by two players.  Each player begins the game with 12 discs and places them on the 12 dark squares closest to him or her.  Black opens the game, then players alternate their turns. "
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moves:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The pieces always move diagonally and single pieces are always limited to forward moves.  A piece making a non-capturing move may move only one square." />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To capture a piece, you must jump the opponent's piece and land in an open space diagonally in a straight line. The open space must be empty. Multiple captures may be chained together to caputre mulitple pieces of the opponent. " />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kinging:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To king a piece, the player must reach the furthest row opposite of it's starting position. A king symbol will appear. Once kinged the piece may move in any direction diagonally (both backwards and forwards). " />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Game:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A player will win when the opponent is unable to make any further moves. All pieces must be captured or blocked. " />

</LinearLayout>